<div class="user-posts-container row">
  <h3>Add New Post</h3>
    <%= form_with(model: [@user, @post], url: user_posts_path(@user)) do |form| %>
      <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
      </div>
      <div>
        <%= form.label :text %><br>
        <%= form.text_area :text %>
      </div>
      <div>
        <%= form.submit "Create Post" %>
      </div>
    <% end %>
</div>
